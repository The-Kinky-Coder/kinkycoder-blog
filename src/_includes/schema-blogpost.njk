<script type="application/ld+json">
{
"@context": "https://schema.org",
"@type": "BlogPosting",
"headline": "{{ title }}",
"image": [
    "{{ site.url }}{{ seo.image or shareImage or site.defaultImage }}"
],
"datePublished": "{{ date | isoDate }}",
"dateModified": "{{ date | isoDate }}",
"inLanguage": "en-US",
"author": [{
    "@type": "Person",
    "name": "{{ site.author }}",
    "url": "{{ site.url }}",
    "sameAs": [
        "https://twitter.com/{{ site.twitterHandle | replace('@', '') }}",
        "https://bsky.app/profile/{{ site.blueskyHandle }}"
    ]
}],
"publisher": {
    "@type": "Person",
    "name": "{{ site.author }}",
    "url": "{{ site.url }}",
    "sameAs": [
        "https://twitter.com/{{ site.twitterHandle | replace('@', '') }}",
        "https://bsky.app/profile/{{ site.blueskyHandle }}"
    ]
},
"mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
},
"description": "{{ seo.description or description or site.description }}",
"keywords": "{{ tags | join(', ') }}",
"articleSection": "Blog",
"breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
        {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "{{ site.url }}"
        },
        {
            "@type": "ListItem",
            "position": 2,
            "name": "{{ title }}",
            "item": "{{ site.url }}{{ page.url }}"
        }
    ]
}
}
</script>